<h1>管理者画面のユーザー一覧画面</h1>

<table>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>投稿数</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user|%>
    <tr>
      <th><%= link_to user.name, admin_user_path(user) %></th>
      <th><%= user.tasks.count %></th>
    </tr>
    <% end %>
  </tbody>
</table>
