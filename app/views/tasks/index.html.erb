<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<p><%= link_to '終了期限の近い順', tasks_path(sort_expired: "true") %></p>
<p><%= link_to 'タスクの古い順', tasks_path %></p>

<%= form_with(url: tasks_path, method: :get, local: true) do |f| %>
  <div class="field">
    <%= f.label :title, "タイトル検索" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :status, "ステータスで検索" %>
    <%= f.select :status, [["未着手","yet"],["着手中","working"],["完了","completed"]], { include_blank: '選択なし' } %>
  </div>
  <%= f.submit('検索')%>
<% end %>



<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>終了日時</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class="task_row">
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.expired_at.strftime("%Y年%m月%d日") %></td>
        <td><%= task.status %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: '消していいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
